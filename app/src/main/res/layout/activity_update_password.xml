<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <cn.epark.view.StatusBarHeightView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:srcCompat="@drawable/ic_back_black" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置密码"
            android:textColor="@color/g333333"
            android:textSize="17sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="35dp"
        android:text="为账号设置新密码"
        android:textColor="@color/g333333"
        android:textSize="27sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/enterpwd_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/et_underline_unselected"
            android:hint="请输入6-16位密码"
            android:maxLength="16"
            android:textCursorDrawable="@drawable/cursor_shape" />

    </RelativeLayout>

    <TextView
        android:id="@+id/pwdmessage_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:text="未注册的手机号码验证后将自动创建账号"
        android:textColor="@color/g333333"
        android:textSize="12sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/finsh_off_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/selector_base_btn_bg"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/colorWhite"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:paddingStart="52dp"
        android:paddingEnd="52dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/mobile_phone_et"
                style="@style/EditText_input"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/hint_phone_tip"
                android:textSize="15sp"
                android:maxLength="13" />

            <ImageView
                android:id="@+id/phone_clear_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_input_clear"
                android:padding="6dp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/sure_pwd_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/TextView_input"
                android:gravity="center_vertical"
                android:text=""
                android:hint="确认密码"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/code_clear_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/send_code_btn_tv"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:src="@mipmap/icon_input_clear"
                android:padding="6dp" />

            <TextView
                android:id="@+id/send_code_btn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="@string/send_sms"
                android:textSize="12sp"
                android:background="@drawable/selector_send_sms_btn" />
        </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/error_msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:textColor="@color/f5282b" />

        <TextView
            android:id="@+id/login_btn_tv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/selector_base_btn_bg"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:text="登录"/>

        <TextView
            android:id="@+id/pwd_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="2dp"
            android:textColor="@color/c1B8FFF"
            android:text="账号密码登录" />
    </LinearLayout>

</LinearLayout>