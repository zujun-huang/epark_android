<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.SplashActivity">

    <park.bika.com.parkapplication.view.StatusBarHeightView
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.view.ViewPager
        android:layout_below="@id/status_bar"
        android:id="@+id/vp_carousel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <Button
        android:id="@+id/btn_carousel_in"
        android:layout_above="@+id/ll_carousel_point_group"
        android:layout_width="220dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="32dp"
        android:alpha="0"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/ll_carousel_point_group"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/vp_carousel"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"/>

</RelativeLayout>