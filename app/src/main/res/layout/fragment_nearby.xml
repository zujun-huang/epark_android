<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NearbyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--顶部-->
        <park.bika.com.parkapplication.view.StatusBarHeightView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorParkBlue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorParkBlue"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_near_area"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_down"
                android:gravity="center"
                android:text="永川"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

            <park.bika.com.parkapplication.view.SearchView
                android:id="@+id/search_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:layout_marginRight="10dp"
                app:isVoice="false"
                app:hint_txt="@string/near_page_search_tip"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>