<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape>
            <corners android:radius="16dp" />
            <gradient android:angle="45" android:endColor="@color/theme_send_btn_end_normal" android:startColor="@color/theme_send_btn_start_normal" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="16dp" />
            <gradient android:angle="45" android:endColor="@color/theme_send_btn_end_normal" android:startColor="@color/theme_send_btn_start_normal" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="16dp" />
            <gradient android:angle="45" android:endColor="@color/theme_send_btn_end" android:startColor="@color/theme_send_btn_start" />
        </shape>
    </item>

</selector>
