<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/theme_btn_start_pressed"
                android:centerColor="@color/theme_color_pressed"
                android:endColor="@color/theme_btn_end_pressed"/>
            <corners android:radius="22dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/theme_btn_start_pressed"
                android:centerColor="@color/theme_color"
                android:endColor="@color/theme_btn_end_pressed"/>
            <corners android:radius="22dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/theme_btn_start"
                android:centerColor="@color/theme_color"
                android:endColor="@color/theme_btn_end"/>
            <corners android:radius="22dp" />
        </shape>
    </item>
</selector>